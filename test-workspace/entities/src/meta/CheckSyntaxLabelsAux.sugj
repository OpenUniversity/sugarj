package meta;

import meta.Syntax;

public sugar CheckSyntaxLabelsAux {
  rules
    constraint-error : Production(struct, exps) -> <check-syntax-label(|struct)> exps

    check-syntax-label(|struct) : Labeled(l, e) ->  <check-syntax-label(|struct); conc> (msgs, e)
      where <valid-syntax-label < ![] + ![<concat-strings>["Invalid label ",l," for structure ",struct,"."]]> (struct, l) => msgs
    check-syntax-label(|struct) : c#(xs) -> <mapconcat(check-syntax-label(|struct))> xs

    valid-syntax-label = fail
}