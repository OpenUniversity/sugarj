    ForeachTemplate -> ListUnquote {cons("FromMetaExpr")}
    "$for" "(" StrategoTerm "in" StrategoStrategy ")" "{" Requoted "}" -> ForeachTemplate {cons("ForeachTemplate")}

  desugarings
