package statemachine.test;

import statemachine.Language;

public statemachine ATM {
  initial state Init 

  event DoWithdraw
  event Cancel
  event PinOK
  event PinNOK
  event MoneyTaken
  event CardTaken
  event CardRevoked

  state Init {
    DoWithdraw => Withdraw
    Cancel => Init
  }
  state Withdraw {
    PinOK => GiveMoney
    PinNOK => RevokeCard
    Cancel => Init
  }
  state GiveMoney {
    MoneyTaken => ReturnCard
  }
  state ReturnCard {
    CardTaken => Init
  }
  state RevokeCard {
    CardRevoked => Init
  }
}