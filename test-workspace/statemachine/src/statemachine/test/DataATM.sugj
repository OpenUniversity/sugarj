package statemachine.test;

import statemachine.Language;

import statemachine.data.InternalData;
import statemachine.data.ParametricEvent;
import statemachine.data.TransitionCondition;

public statemachine DataATM {
  initial state Init 

  data acc :: Account
  data pinCount :: Integer

  event Withdraw(Account)
  event Cancel
  event Pin(String)
  event Amount(Integer)
  event CardMoneyTaken
  event CardRevoked

  state Init {
    Withdraw(acc) => Withdraw
    Cancel => Init
  }
  state Withdraw { 
    Pin(p) if pinCount < 3 && p == "1234"
      => HowMuch
    Pin(p) if pinCount >= 3 || p != "1234"
      => Withdraw
    Cancel => Init
  }
  state HowMuch {
    Amount(i) if i < 2000 => GiveCardMoney
    Cancel => Init
  }
  state GiveCardMoney {
    CardMoneyTaken => Init
  }
  state RevokeCard {
    CardRevoked => Init
  }
}