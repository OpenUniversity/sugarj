package statemachine;

public sugar Language {
  desugarings
    statemachine-model

  rules
    statemachine-model :
      model@Statemachine(mods, name, init, states) -> 
      ModelDec(ModelDecHead(mods, name), ModelBody(("Statemachine", init, states)))

  context-free syntax
    Statemachine -> ToplevelDeclaration
    AnnoOrSugarMod* "statemachine" JavaId "{" InitialState State* "}" -> Statemachine {cons("Statemachine")}

    JavaId -> StateName
    "initial" "state" StateName -> InitialState {cons("InitialState")}
    "state" StateName "{" Transition* "}" -> State {cons("State")}
    Event "=>" StateName -> Transition {cons("Transition")}

    JavaId -> Event {cons("NamedEvent")}
}